*nat
:PREROUTING ACCEPT [0:0]
:INPUT ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]
:POSTROUTING ACCEPT [0:0]
<% @rules.keys.sort.each do |k| -%>
-A PREROUTING -d <%= @address %>/32 -i eth0 -p tcp -m tcp --dport <%= k %> -j DNAT --to-destination <%= @rules[k] %>
-A PREROUTING -d 127.0.0.1/32 -i eth0 -p tcp -m tcp --dport <%= k %> -j DNAT --to-destination <%= @rules[k] %>
<% end -%>
-A POSTROUTING --source <%= @network %> -j SNAT --to-source <%= @address %>
COMMIT
*filter
:INPUT ACCEPT [0:0]
:FORWARD ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]
COMMIT
